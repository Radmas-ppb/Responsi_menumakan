<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/FeimageView"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:padding="6dp"
        android:src="@drawable/ketoprak"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/FeimageView"
        android:padding="8dp">

        <TextView
            android:id="@+id/FeTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="Pecel lele"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/FeDesk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FeTittle"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="22dp"
            android:text="Pecel lele Nambah Mihun"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/Feprice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FeTittle"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="46dp"
            android:layout_toRightOf="@+id/Feprice"
            android:text="15000"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Feprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FeTittle"
            android:layout_marginLeft="208dp"
            android:layout_marginTop="46dp"
            android:text="Harga"
            android:textSize="20dp"
            android:textStyle="bold"/>



    </RelativeLayout>

</RelativeLayout>